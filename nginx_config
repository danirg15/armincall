server {
    listen 80;

    location ~ /.well-known {
        allow all;
    }

    server_name armincall.com www.armincall.com;
    return 301 https://$host$request_uri;

}


server {
    listen 443 ssl;

    server_name armincall.com;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }


    ssl_certificate /etc/letsencrypt/live/armincall.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/armincall.com/privkey.pem; # managed by Certbot
}