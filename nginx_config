server {
    listen 80;

    location ^~ /.well-known/acme-challenge/ {
       #alias /opt/mean/armincall/.well-known/acme-challenge/;
       alias /var/www/.well-known/acme-challenge/;
    }

    server_name armincall.com www.armincall.com;
    return 301 https://$host$request_uri;
}


server {
    listen 443 ssl;
	
    server_name armincall.com;

    ssl_certificate  /etc/letsencrypt/live/armincall.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/armincall.com/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

}