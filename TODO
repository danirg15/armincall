update: (ticket_id, fields, callback) => {
        Ticket.findByIdAndUpdate(ticket_id, fields, callback)

        if (fields.calls) {
            Call.update(//just one is being updated
                    { _id: { $in: fields.calls } }, 
                    { $set:{'isValidated': true} }, 
            (err) => {})
        }
    },


